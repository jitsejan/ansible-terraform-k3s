---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: vault
  name: vault-ingress
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
    - host: "{{ 'http://vault.localhost' if ansible_distribution == 'MacOSX' else 'vault.jitsejan.com' }}"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: vault
                port:
                  name: http
