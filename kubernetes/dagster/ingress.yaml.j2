---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: dagster
  name: dagster-ingress
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
    - host: "{{ 'http://dagster.localhost' if ansible_distribution == 'MacOSX' else 'dagster.jitsejan.com' }}"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: dagster-dagit
                port:
                  name: http
